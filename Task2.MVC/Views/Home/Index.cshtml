@model List<Task2.Domain.Entities.Product>

<h2>Ürün Listesi</h2>

<a href="@Url.Action("Create", "Home")" class="btn btn-success">Yeni Ürün Ekle</a>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Resim</th>
            <th>Adı</th>
            <th>Kodu</th>
            <th>Fiyatı</th>
            <th>Oluşturma Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" alt="Ürün Resmi" width="50" height="50" />
                    }
                    else
                    {
                        <span>Resim Yok</span>
                    }
                </td>
                <td>@product.Name</td>
                <td>@product.Code</td>
                <td>@product.Price ₺</td>
                <td>@product.CreatedAt.ToString("dd.MM.yyyy")</td>
                <td>
                    <a href="@Url.Action("Edit", "Home", new { id = product.Id })" class="btn btn-primary btn-sm">Düzenle</a>
                    <a href="@Url.Action("Delete", "Home", new { id = product.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Bu ürünü silmek istediğinizden emin misiniz?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
